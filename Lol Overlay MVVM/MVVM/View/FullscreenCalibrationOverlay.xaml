<Window x:Class="Lol_Overlay_MVVM.MVVM.View.FullscreenCalibrationOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lol_Overlay_MVVM.MVVM.View"
             Topmost="True"
             AllowsTransparency="True"
             WindowStyle="None"
             WindowState="Maximized"
             Width="1920" Height="1080" Background="#11ffffff" MouseLeftButtonDown="OnOverlayClick">
    <Grid >
        <TextBlock x:Name="InstructionTextBox" Background="Black" Padding="10" FontFamily="{StaticResource Poppins-Semibold}" FontSize="72" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="0" Color="Black" ShadowDepth="3"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
