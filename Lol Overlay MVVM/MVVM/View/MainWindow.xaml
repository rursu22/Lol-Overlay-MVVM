<Window x:Class="Lol_Overlay_MVVM.MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lol_Overlay_MVVM.MVVM.View" xmlns:viewmodel="clr-namespace:Lol_Overlay_MVVM.MVVM.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True"
        Left="700"
        Top="200"
        Title="MainWindow" Height="540" Width="640" Background="Transparent">
    <Border Background="{DynamicResource BackgroundColor}" CornerRadius="25" BorderBrush="Transparent">
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.15*"/>
                <RowDefinition Height="0.85*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" BorderThickness="0,0,0,2" CornerRadius="25,25,0,0" BorderBrush="{DynamicResource BorderColor}" Background="Transparent">
                <Grid Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition Width="0.5*" />
                    </Grid.ColumnDefinitions>

                    <Grid Margin="20,0,0,0" Background="Transparent">

                        <Button Style="{StaticResource HoverRoundButton}" HorizontalAlignment="Left" FontSize="20" Command="{Binding NavigateToHomeCommand}">
                                <TextBlock  Text="Home" FontFamily="{StaticResource Poppins}"/>
                            </Button>
                        <Button Style="{StaticResource HoverRoundButton}" HorizontalAlignment="Center" Command="{Binding NavigateToAddAccountCommand}">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" FontSize="28" FontFamily="{StaticResource Poppins}">
                                Add
                                <LineBreak />
                                Accounts
                            </TextBlock>
                        </Button>
                        <Button Style="{StaticResource HoverRoundButton}" HorizontalAlignment="Right"  Command="{Binding NavigateToCalibrationCommand}">
                            <TextBlock  Text="Calibration" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource Poppins}"/>
                        </Button>
                    </Grid>
                
                    <Button Grid.Column="1" Command="{Binding CycleThemeCommand}" HorizontalAlignment="Right" Margin="0,0,20,0" Style="{StaticResource HoverRoundButton}">
                        <TextBlock Foreground="{DynamicResource BackgroundColorText}" FontFamily="{StaticResource Poppins}" TextAlignment="Center">
                            Change
                            <LineBreak />
                            Theme
                        </TextBlock>
                    </Button>
                
                </Grid>
            </Border>
            <ContentControl Background="Transparent" Grid.Row="1" Content="{Binding Navigation.CurrentView}"/>
        </Grid>
    </Border>
</Window>
